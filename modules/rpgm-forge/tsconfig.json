{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@@/*": [
				"./*"
			],
			"#/*": [
				"../../shared/src/*"
			],
			"##/*": [
				"../../shared/*"
			]
		},
		"types": [
			"vite/client",
			"fvtt-types/lenient",
			"@rpgm/forge/types",
		],
		"plugins": [
			{
				"name": "typescript-vue-plugin",
			}
		],
	},
	"include": [
		"./**/*.ts",
		"./lang/index.d.ts",
		"./**/*.vue",
		"../../shared/types/*.d.ts"
	],
	"exclude": [
		"./.dist"
	]
}
